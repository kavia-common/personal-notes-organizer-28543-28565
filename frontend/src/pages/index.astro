---
/**
 * Home Screen page integrated into Astro.
 * Replaces static HTML/HEAD/BODY with a layout + slot while preserving semantic structure and classes.
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import homeScript from "../scripts/home.js?raw"; // Inline to avoid module resolution issues; could also use a client directive.
const pageTitle = "Notes";
---

<BaseLayout title="Notes Â· Personal Notes Organizer" description="Home view listing note categories with quick actions.">
  <header class="header" role="banner">
    <div class="container header__row">
      <h1 class="header__title">{pageTitle}</h1>
      <div class="header__actions" role="group" aria-label="Header actions">
        <button class="icon-btn" aria-label="Search" id="btn-search">
          <svg class="icon" width="24" height="24" viewBox="0 0 24 24" aria-hidden="true">
            <path fill="currentColor" d="M10 2a8 8 0 015.292 13.707l4.5 4.5-1.414 1.414-4.5-4.5A8 8 0 1110 2zm0 2a6 6 0 100 12 6 6 0 000-12z"></path>
          </svg>
        </button>
        <button class="icon-btn" aria-label="Info" id="btn-info">
          <svg class="icon" width="24" height="24" viewBox="0 0 24 24" aria-hidden="true">
            <path fill="currentColor" d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"></path>
          </svg>
        </button>
      </div>
    </div>
  </header>

  <main class="main" role="main">
    <section class="container cards" aria-label="Note categories">
      <article class="card card--h157 surface-1" tabindex="0" role="button" aria-label="Book Review card">
        <h2 class="card__title">Book Review : The Design of Everyday Things by Don Norman</h2>
      </article>
      <article class="card card--h123 surface-2" tabindex="0" role="button" aria-label="Animes produced by Ufotable card">
        <h2 class="card__title">Animes produced by Ufotable</h2>
      </article>
      <article class="card card--h110 surface-3" tabindex="0" role="button" aria-label="Mangas planned to read card">
        <h2 class="card__title">Mangas planned to read</h2>
      </article>
      <article class="card card--h120 surface-4" tabindex="0" role="button" aria-label="Awesome tweets collection card">
        <h2 class="card__title">Awesome tweets collection</h2>
      </article>
      <article class="card card--h100 surface-5" tabindex="0" role="button" aria-label="List of free & open source apps card">
        <h2 class="card__title">List of free & open source apps</h2>
      </article>
    </section>
  </main>

  <button class="fab" aria-label="Add new note" id="fab-add">
    <svg class="icon" width="28" height="28" viewBox="0 0 24 24" aria-hidden="true">
      <path fill="currentColor" d="M11 11V5h2v6h6v2h-6v6h-2v-6H5v-2z"></path>
    </svg>
  </button>

  <script is:inline>
    // Inline the client script to avoid module resolution issues without a bundler config tweak.
    {homeScript}
  </script>
</BaseLayout>
